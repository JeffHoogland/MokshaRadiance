   group { name: "e/modules/packagekit/main";
      max: 128 128;
      parts {
         part { name: "base"; type: IMAGE;
            description { state: "default" 0.0;
               aspect: 1.0 1.0;
               aspect_preference: BOTH;
               image.normal: "img/packagekit_base.png";
            }
         }
         part { name: "status"; type: IMAGE;
            description { state: "default" 0.0;
               aspect: 1.0 1.0;
               aspect_preference: BOTH;
               visible: 0;
            }
            description { state: "running" 0.0;
               inherit: "default" 0.0;
               visible: 1;
               image.normal: "img/packagekit_work1.png";
               image.tween: "img/packagekit_work2.png";
               image.tween: "img/packagekit_work3.png";
               image.tween: "img/packagekit_work4.png";
            }
            description { state: "updates" 0.0;
               inherit: "default" 0.0;
               visible: 1;
               image.normal: "img/packagekit_updates.png";
            }
            description { state: "updated" 0.0;
               inherit: "default" 0.0;
               visible: 1;
               image.normal: "img/packagekit_updated.png";
            }
            description { state: "error" 0.0;
               inherit: "default" 0.0;
               visible: 1;
               image.normal: "img/packagekit_error.png";
            }
         }
         part { name: "num_updates"; type: TEXT;
            effect: SHADOW;
            description { state: "default" 0.0;
               text {
                  font: "Sans:style=Bold";
                  size: 9;
               }
            }
         }
      }
      programs {
         program {
            signal: "packagekit,state,none"; source: "e";
            action: STATE_SET "default" 0.0;
            target: "status";
         }
         program {
            name: "working";
            signal: "packagekit,state,working"; source: "e";
            action: STATE_SET "running" 0.0;
            target: "status";
            transition: LINEAR 0.3;
            after: "working";
         }
         program {
            signal: "packagekit,state,updates"; source: "e";
            action: STATE_SET "updates" 0.0;
            target: "status";
         }
         program {
            signal: "packagekit,state,updated"; source: "e";
            action: STATE_SET "updated" 0.0;
            target: "status";
         }
         program {
            signal: "packagekit,state,error"; source: "e";
            action: STATE_SET "error" 0.0;
            target: "status";
         }
      }
   }
